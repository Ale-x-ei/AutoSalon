<?php
function leasing_schema() {
  return  = array(
    'fields' => array(
      'id_car'   => array( 'type'  => 'int',
                        'length'   => 3,
                        'unsigned' => TRUE,
                        'not null' => TRUE,
                        'AUTO_INCREMENT' => TRUE,
                      ),
      'first_pay'   => array( 'type' => 'double',
                        'unsigned' => TRUE,
                        'not null' => TRUE,
                        'default'  => ''
                    ),
      'lease_period'  => array( 'type' => 'int',
                        'length'   => 2,
                        'unsigned' => TRUE,
                        'not null' => TRUE,
                        'default'  => ''
                      ),
      'price_add_coef' => array( 'type' => 'double',
                        'unsigned' => TRUE,
                        'not null' => TRUE,
                        'default'  => ''
                      ),
    ),
  );}
?>

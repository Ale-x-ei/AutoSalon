<?php
 $schema['node'] = array(
    'fields' => array(
      'nid'   => array( 'type'     => 'serial',
                        'unsigned' => TRUE,
                        'not null' => TRUE
                      ),
      'vid'   => array( 'type'     => 'int',
                        'unsigned' => TRUE,
                        'not null' => TRUE,
                        'default'  => 0
                    ),
      'type'  => array( 'type'     => 'varchar',
                        'length'   => 32,
                        'not null' => TRUE,
                        'default'  => ''
                      ),
      'title' => array( 'type'     => 'varchar',
                        'length'   => 128,
                        'not null' => TRUE,
                        'default'  => ''
                      ),
    ),
    'primary key' => array( 'nid' ),
    'unique keys' => array( 'vid' => array( 'vid' ) ),
    'indexes'     => array(
      'nid'             => array( 'nid' ),
      'node_title_type' => array( 'title', array( 'type', 4 ) ),
    ),
  );
?>
